<h1>Burgers</h1>

<div class="container">
<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger-input">Burger Name</label>
    <input type="text" class="form-control burger-input" id="burger-input">
  </div>

  <button type="submit" class="btn add-burger" id="add-burger">Add Burger</button>
</form>
</div>

<div class="container" id="burgers-container">
  <div class="row text-center justify-content-md-center">

    <div class="col col-lg-4" id="burgers-list-col">
      <h2>All Burgers</h2>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers-block}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col col-4" id="devouredBurgers-list">
      <h2>Devoured Burgers</h2>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> devoured}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>


